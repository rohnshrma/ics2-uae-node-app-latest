<%- include("partials/AdminHeader") -%>

  <!-- Main Dashboard Content -->
  <div class="container mt-5 admin_dashboard">
    <h1 class="text-center mb-5">Welcome to Admin Dashboard</h1>
    <div class="row align-items-center">
      <!-- Events Count Card -->
      <div class="col-md-4">
        <div class="card text-white bg-primary mb-4">
          <div class="card-header">Total Events</div>
          <div class="card-body">
            <h5 class="card-title level2">
              <%= eventCount %>
            </h5>
          </div>
        </div>
      </div>
      <!-- Members Count Card -->
      <div class="col-md-4">
        <div class="card text-white bg-success mb-4">
          <div class="card-header">Total Members</div>
          <div class="card-body">
            <h5 class="card-title level2">
              <%= memberCount %>
            </h5>
          </div>
        </div>
      </div>
      <!-- Blogs Count Card -->
      <!-- <div class="col-md-4">
        <div class="card text-white bg-warning mb-4">
          <div class="card-header">Total Blogs</div>
          <div class="card-body">
            <h5 class="card-title">
              <%= //blogCount %>
            </h5>
            <p class="card-text">Total number of blogs posted by members.</p>
          </div>
        </div>
      </div> -->
    </div>
    <hr>

    <!-- Event List Section (Optional) -->
    <div class="row">
      <div class="col-md-12">
        <h2>Event List</h2>
        <!-- You can render event list dynamically if needed -->
        <!-- Example: -->
        <ul class="list-group mt-4">
          <% events.forEach(event=> { %>
            <li class="list-group-item admin-event-list-item ">
              <div class="row justify-content-between align-items-center">
                <div class="col-lg-2">
                  <img src="/<%= event.eventImage  %>" alt="<%= event.eventName%>">
                </div>
                <div class="col-lg-8">
                  <h4><Strong>

                      Event :
                    </Strong>

                    <%= event.eventName %>


                  </h4>
                  <p>
                    <%= event.eventDescription %>
                  </p>
                  <p><strong>Date:</strong>
                    <%= new Date(event.eventDateTime).toLocaleDateString("en-IN", { timeZone: "Asia/Kolkata" }) %>
                  </p>
                  <p><strong>Time:</strong>
                    <%= new Date(event.eventDateTime).toLocaleTimeString("en-IN", { timeZone: "Asia/Kolkata" }) %>
                  </p>
                </div>
                <a href="/admin/delete-event/<%=event.id%>" class="btn btn-sm btn-danger">Delete</a>
              </div>
            </li>
            <% }) %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>